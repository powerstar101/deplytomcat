pipeline {
    agent any
    stages{
        stage("deploy"){
            steps{
                script {
                    println "here we are doing deploy"
                    sh '''
                    #!bin/bash/
                    echo $BRANCH_NAME
                    echo $BUILD_NUMBER

                    myservers=$@

                    IFS="," read -r -a outputservers <<< $myservers

                    for serverip in ${outputservers[@]}
                    do
                            echo "hello" $serverip

                    done

       
                    '''
                }
            }
        }
    }
}