pipeline{
    agent any
    stages{
        // stage("dowload artifacts"){
              steps{
                println "here we download artifacts from s3 into local"
                sh """
                whoami
                git_branch_local=$(echo $GIT_BRANCH   | sed -e "s|origin/||g")
                echo $branch
                echo $BUILD_NUMBER
                aws s3 cp s3://jenlkins101/$branch/$BUILD_NUMBER/hello-$BUILD_NUMBER.war .
                """
            }
        }
        // stage("deploy artifacts"){
             steps{
                println "here we deploy artifacts"
            }
        }

    }
}